<p id="notice"><%= notice %></p>

<h1>User Instruments</h1>

<table>
  <thead>
    <tr>
      <th>Musician</th>
      <th>Instrument</th>
      <th>Years Played</th>
      <th>Min teaching level</th>
      <th>Max teaching level</th>
      <th>Musician details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @user_instruments.each do |user_instrument| %>
      <tr>
        <td><%= user_instrument.musician.username.capitalize %></td>
        <td><%= user_instrument.instrument.name %></td>
        <td><%= user_instrument.years_played %></td>
        <td><%= user_instrument.min_teaching_level.level %></td>
        <td><%= user_instrument.max_teaching_level.level %></td>
        <td><%= link_to 'Show', user_instrument %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New User Instrument', new_user_instrument_path %>
