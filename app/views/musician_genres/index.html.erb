<p id="notice"><%= notice %></p>

<h1>Teachers By Genres</h1>

<%= search_form_for @q do |f| %>
  <p>Narrow results:</p>


  <div>
  <%= f.label :genre_name_eq, "Search by genre" %>
  <%= f.select :genre_name_eq, options_from_collection_for_select(Genre.all, :name, :name, @q.genre_name_eq), { :include_blank => true } %>
</div>

  
  <%= f.submit :class => "btn btn-primary btn-block" %>
  
  <a href="/">Clear filters</a>
<% end %>

<table>
  <thead>
    <tr>
      <th></th>
      <th>User</th>
      <th>Genre</th>
      <th>Teacher Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @musician_genres.each do |musician_genre| %>
      <tr>
        <td><img src="<%= musician_genre.user.avatar_url %>" alt=""></td>
        <td><%= musician_genre.user.username %></td>
        <td><%= musician_genre.genre.name %></td>
        <td><%= link_to 'Show', user_path(musician_genre.user.username) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

