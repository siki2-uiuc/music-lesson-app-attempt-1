<p id="notice"><%= notice %></p>

<h1>Testimonial Links</h1>

<table>
  <thead>
    <tr>
      <th>Link url</th>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @testimonial_links.each do |testimonial_link| %>
      <tr>
        <td><%= testimonial_link.link_url %></td>
        <td><%= testimonial_link.user_id %></td>
        <td><%= link_to 'Show', testimonial_link %></td>
        <td><%= link_to 'Edit', edit_testimonial_link_path(testimonial_link) %></td>
        <td><%= link_to 'Destroy', testimonial_link, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Testimonial Link', new_testimonial_link_path %>
