<h1><%= @user.username.capitalize %></h1>
<img src="<%= @user.avatar_url %>" alt="">
<h2>Email</h2>
<p><%= @user.email %></p>

<h2>Instruments</h2>
<% @user.instruments.each do |instrument| %>
  <p><%= instrument.name %></p>
<% end %>

<h2>Years Teached</h2>
<p><%= @user.years_teached %></p>
<h2>Teacher Bio</h2>
<p><%= @user.teacher_bio %></p>


<h2>Schedule Availibility & Pricing</h2>
<p><%= @user.lesson_schedule%></p>
<p><%= @user.lesson_pricing.to_s(:currency)%>/ 30-min lesson </p>
