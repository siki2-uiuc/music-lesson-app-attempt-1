<div class="container d-flex flex-column align-items-center">
  <div class="d-flex flex-row border border-dark rounded-lg p-2">
    <div class="d-flex align-items-center">
      <img src="<%= @user.avatar_url %>" alt="" class="border rounded-circle w-50 p-1">
      <div class="pl-2">
        <h1><%= @user.username.capitalize %></h1>
        <div class="pt-1">
          <h2 class="h4">Email</h2>
          <p><%= @user.email %></p>
        </div>
      </div>
    </div>
    
    <div class="d-flex align-items-center justify-content-between">
      <div class="d-flex flex-column align-items-center">
        <h2 class="h5 p-2">Instruments</h2>
        <% @user.instruments.each do |instrument| %>
          <p><%= instrument.name %></p>
        <% end %>
      </div>
      
      <div class="d-flex flex-column align-items-center">
        <h2 class="h5 p-2">Years Teached</h2>
        <p><%= @user.years_teached %></p>
      </div>
    </div>
  </div>
  
  <div class="">
    
    <h2>About Me</h2>
    <p><%= @user.teacher_bio %></p>
  
    <h2>Schedule Availibility & Pricing</h2>
    <p><%= @user.lesson_schedule%></p>
    <p><%= @user.lesson_pricing.to_s(:currency)%>/ 30-min lesson </p>
  </div>
  
  
  <h2>Video Resume</h2>
  <% if current_user == @user %>
    <div>
    <%= link_to "Add New Video", new_testimonial_link_path %>
  </div>
  <% end %>
  <div class="">
    <% @user.testimonial_links.each do |video| %>
      <div class="">
        <iframe width="560" height="315"
          src="<%= video.link_url%>">
        </iframe>
      </div>
      <% if current_user == @user %>
        <div>
          <%= link_to "Edit link", edit_testimonial_link_path(video) %>
          <%= link_to "Delete link", testimonial_link_path(video), method: :delete %>
        </div>
      <% end %>
    <% end %>
  </div>
  
  <%= render "users/request_form" %>
</div>
