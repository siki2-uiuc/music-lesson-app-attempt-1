<div class="container mb-5 border border-dark rounded p-3">
  <h2>Request a Lesson!</h2>
  
  <%= form_with url: "/#{@user.username}/request_form", method: :post do |form| %>
  
    <div class="form-group">
      <%= form.label :sender_address, "Enter your email address:", class: "form-label" %>
      <%= form.email_field :sender_address, class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= form.hidden_field :recipient_address, value: @user.email %>
    </div>
  
    <div class="form-group">
      <%= form.label :subject, "Subject", class: "form-label" %>
      <%= form.text_field :subject, placeholder: "Lesson Request", class: "form-control"  %>
    </div>
  
    <div class="form-group">
      <%= form.label :body, "Message body", class: "form-label" %>
      <%= form.text_area :body, rows: 3, class: "form-control" %>
    </div>
  
    <%= form.button "Send request", class: "btn btn-primary" %>
  
  <% end %>
</div>
