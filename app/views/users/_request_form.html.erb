<div class="container mb-5 border border-dark rounded p-4">
  <h2>Request a Lesson!</h2>
  
  <%= form_with url: "/#{@user.username}/request_form", method: :post, class: "p-3" do |form| %>
  
    <div class="form-group mb-3">
      <%= form.label :sender_address, "Enter your email address:", class: "form-label" %>
      <%= form.email_field :sender_address, placeholder: "john_smith@example.com", class: "form-control" %>
    </div>
  
    <div class="form-group">
      <%= form.hidden_field :recipient_address, value: @user.email %>
    </div>
  
    <div class="form-group mb-3">
      <%= form.label :subject, "Subject:", class: "form-label" %>
      <%= form.text_field :subject, placeholder: "Lesson Request", class: "form-control"  %>
    </div>
  
    <div class="form-group mb-3">
      <%= form.label :body, "Message body:", class: "form-label" %>
      <%= form.text_area :body, rows: 3, placeholder: "Type your request here...", class: "form-control" %>
    </div>
  
    <%= form.button "Send request", class: "mt-3 btn btn-primary" %>
  
  <% end %>
</div>
